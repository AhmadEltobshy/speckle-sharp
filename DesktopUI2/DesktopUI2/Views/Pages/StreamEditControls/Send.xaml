<UserControl
  x:Class="DesktopUI2.Views.Pages.StreamEditControls.Send"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
  xmlns:c="clr-namespace:DesktopUI2.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
  xmlns:m="clr-namespace:Material.Styles;assembly=Material.Styles"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewModels="clr-namespace:DesktopUI2.ViewModels"
  d:DesignHeight="450"
  d:DesignWidth="400"
  mc:Ignorable="d">

  <Grid RowDefinitions="auto, auto">

    <Expander
      Padding="15,0"
      HorizontalAlignment="Stretch"
      HorizontalContentAlignment="Stretch"
      Background="Transparent"
      Classes="Flat"
      IsExpanded="{Binding IsExpanded}">
      <Expander.Header>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Sending " />
          <TextBlock FontWeight="Bold" Text="{Binding SelectedFilter.Summary, FallbackValue=?}" />
          <TextBlock Text=" to " />
          <TextBlock FontWeight="Bold" Text="{Binding SelectedBranch.name, FallbackValue=?}" />
        </StackPanel>
      </Expander.Header>
      <Grid ColumnDefinitions="Auto,*" RowDefinitions="auto, auto, auto, auto">

        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
          <icons:MaterialIcon
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Foreground="Gray"
            Kind="InfoCircle"
            ToolTip.Tip="Data in a stream can be organized in branches,&#x0a;for instance, to have multiple design options&#x0a;or to store data by discipline.&#x0a;The default branch is called main." />
          <TextBlock Text="Branch:" />
        </StackPanel>

        <StackPanel
          Grid.Row="1"
          VerticalAlignment="Center"
          Orientation="Horizontal">
          <icons:MaterialIcon
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Foreground="Gray"
            Kind="InfoCircle"
            ToolTip.Tip="Each connector offers various&#x0a;ways to send data.&#x0a;Select the filter you want to use." />
          <TextBlock Text="What to send:" />
        </StackPanel>

        <ComboBox
          Grid.Column="1"
          Margin="10,10,0,10"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center"
          Items="{Binding Branches}"
          PlaceholderText="Select a branch"
          SelectedItem="{Binding SelectedBranch}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <Grid ColumnDefinitions="auto,*">
                <icons:MaterialIcon
                  Margin="0,0,5,0"
                  Foreground="DarkGray"
                  Kind="SourceBranch" />
                <TextBlock
                  Grid.Column="1"
                  Text="{Binding name}"
                  TextTrimming="CharacterEllipsis" />
              </Grid>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <ComboBox
          Name="FilterCombo"
          Grid.Row="1"
          Grid.Column="1"
          Margin="10,10,0,10"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center"
          Items="{Binding AvailableFilters}"
          PlaceholderText="Select a filter"
          SelectedIndex="0"
          SelectedItem="{Binding SelectedFilter}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <Grid ColumnDefinitions="auto,*">
                <icons:MaterialIcon
                  Margin="0,0,5,0"
                  Foreground="DarkGray"
                  Kind="{Binding Filter.Icon}" />
                <TextBlock
                  Grid.Column="1"
                  Text="{Binding Filter.Name}"
                  TextTrimming="CharacterEllipsis" />
              </Grid>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <m:Card
          Grid.Row="2"
          Grid.ColumnSpan="2"
          Margin="0,15"
          VerticalAlignment="Stretch"
          HorizontalContentAlignment="Stretch"
          Classes="Mini">
          <ContentControl Content="{Binding #FilterCombo.SelectedItem.FilterView}" />
        </m:Card>


        <Button
          Grid.Row="3"
          Grid.ColumnSpan="2"
          Margin="15"
          HorizontalAlignment="Center"
          HorizontalContentAlignment="Center"
          assists:ShadowAssist.ShadowDepth="Depth0"
          Background="Transparent"
          Command="{Binding OpenSettingsCommand}"
          Foreground="{DynamicResource PrimaryHueMidBrush}">
          <Grid Margin="0" ColumnDefinitions="auto,*">
            <icons:MaterialIcon VerticalAlignment="Center" Kind="Settings" />
            <TextBlock
              Grid.Column="1"
              Margin="8,0"
              Padding="0"
              VerticalAlignment="Center"
              Text="Advanced Settings"
              TextTrimming="CharacterEllipsis" />
          </Grid>
        </Button>

      </Grid>

    </Expander>


    <Grid
      Grid.Row="1"
      Margin="15"
      ColumnDefinitions="*,auto">
      <!--  COMMIT MESSAGE  -->
      <TextBox
        Margin="0,0,10,0"
        Padding="0"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        Classes="Filled Dense"
        Foreground="Gray"
        IsEnabled="{Binding Progress.IsProgressing, Converter={x:Static BoolConverters.Not}}"
        IsReadOnly="{Binding Progress.IsProgressing}"
        Text="{Binding StreamState.CommitMessage}"
        Watermark="Commit message" />
      <StackPanel
        Grid.Column="1"
        HorizontalAlignment="Right"
        Orientation="Horizontal"
        Spacing="10">


        <!--  SAVE BTN  -->
        <m:FloatingButton
          VerticalAlignment="Center"
          assists:ShadowAssist.ShadowDepth="Depth0"
          Background="Transparent"
          Command="{Binding SaveCommand}"
          IsEnabled="{Binding Progress.IsProgressing, Converter={x:Static BoolConverters.Not}}"
          ToolTip.Tip="Save this sender to the file without sending">
          <Button.Content>
            <icons:MaterialIcon
              Width="20"
              Height="20"
              assists:ShadowAssist.ShadowDepth="0"
              Foreground="Gray"
              Kind="ContentSave" />

          </Button.Content>
        </m:FloatingButton>

        <!--  SEND BTN  -->
        <c:SendButton />
      </StackPanel>
    </Grid>

  </Grid>

</UserControl>
