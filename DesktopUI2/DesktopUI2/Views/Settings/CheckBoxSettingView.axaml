<UserControl
  x:Class="DesktopUI2.Views.Settings.CheckBoxSettingView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

  mc:Ignorable="d">


	<Grid ColumnDefinitions="1*,1*" RowDefinitions="auto" Margin="10">
		<TextBlock Text="{Binding Setting.Name}" ToolTip.Tip="{Binding Setting.Description}" TextWrapping="Wrap" />
		<CheckBox  HorizontalAlignment="Right"
      Grid.Column="1" IsChecked="{Binding Setting.IsChecked}"/>

	</Grid>
</UserControl>
