      <Grid ColumnDefinitions="auto, 1*">

        <TextBox
          Grid.Column="1"
          Margin="0,8"
          IsEnabled="{Binding #Category.Text}"
          Padding="0"
          assists:TextFieldAssist.CornerRadius="32"
          BorderBrush="{Binding $self.Foreground}"
          BorderThickness="1"
          Classes="Solo"
          Text="{Binding Setting.Test, Mode=TwoWay}"
          Watermark="Material, Family, or Type">
          <TextBox.InnerLeftContent>
            <Border Width="{Binding $self.Bounds.Height}" Height="{Binding $parent[TextBox].Height}">
              <icons:MaterialIcon
                Width="20"
                Height="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Kind="Magnify" />
            </Border>
          </TextBox.InnerLeftContent>
          <TextBox.InnerRightContent>
            <!--<Button
              Margin="0,8"
              CornerRadius="32">
              Done
            </Button>-->
          </TextBox.InnerRightContent>
        </TextBox>
      </Grid>

      <ScrollViewer
        Grid.Row="2"
        MaxHeight="180"
        VerticalScrollBarVisibility="Auto">
        <StackPanel>
          <ListBox
          x:Name="ItemsListBox"
          x:Class=""
          Margin="0,0,0,8"
          Classes="Chip"
          Items="{Binding Setting.SearchResults2}"
          Selection="{Binding Setting.SearchSelectionModel}"
          SelectionMode="Multiple, Toggle">
        </ListBox>
        <TextBlock Text="{Binding Setting.Test}"/>
        </StackPanel>
       </ScrollViewer>
    </StackPanel>


