<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Objects.Converter.AutoCAD2021</AssemblyName>
    <RootNamespace>Objects.Converter.AutoCAD</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;AUTOCAD2021</DefineConstants>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /Y /S &quot;$(TargetDir)$(AssemblyName).dll&quot; &quot;$(AppData)\Speckle\Kits\Objects\&quot;" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Civil3D2021.Base" Version="1.0.0" />
    <PackageReference Include="ModPlus.AutoCAD.API.2021" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\Core\Core\Core.csproj" />
    <ProjectReference Include="..\..\..\Objects\Objects.csproj" />
  </ItemGroup>

  <Import Project="..\ConverterAutoCADShared\ConverterAutoCADShared.projitems" Label="Shared" />

</Project>
