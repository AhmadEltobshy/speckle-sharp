<UserControl
  x:Class="Speckle.DesktopUI.Streams.StreamCreateDialogView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Speckle.DesktopUI.Streams"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:s="https://github.com/canton7/Stylet"
  d:DesignHeight="200"
  d:DesignWidth="400"
  mc:Ignorable="d">
  <Grid>
    <StackPanel>
      <TextBlock Text="Hello there! Let's create a stream 😎" />
      <Button
        x:Name="CloseButton"
        Margin="24"
        HorizontalAlignment="Center"
        Command="{x:Static md:DialogHost.CloseDialogCommand}"
        Content="CLOSE"
        Foreground="{StaticResource MaterialDesignLightBackground}"
        Style="{StaticResource MaterialDesignFlatMidBgButton}" />
    </StackPanel>
  </Grid>
</UserControl>
