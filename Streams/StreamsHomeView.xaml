<UserControl
  x:Class="Speckle.DesktopUI.Streams.StreamsHomeView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Speckle.DesktopUI.Streams"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
  d:DesignHeight="450"
  d:DesignWidth="600"
  mc:Ignorable="d">
  <UserControl.Resources>
    <ResourceDictionary Source="../Themes/Generic.xaml" />
  </UserControl.Resources>
  <Grid>
    <md:Transitioner AutoApplyTransitionOrigins="True" SelectedIndex="{Binding SelectedSlide}">
      <md:Transitioner.InputBindings>
        <KeyBinding Key="Esc" Command="{x:Static md:Transitioner.MovePreviousCommand}" />
      </md:Transitioner.InputBindings>

      <md:TransitionerSlide OpeningEffect="{md:TransitionEffect FadeIn}">
        <local:StreamsListView />
      </md:TransitionerSlide>

      <md:TransitionerSlide
        Margin="0,10,0,0"
        Background="{DynamicResource MaterialDesignPaper}"
        ClipToBounds="True"
        Foreground="{DynamicResource MaterialDesignBody}">
        <local:StreamInfoView />
      </md:TransitionerSlide>

    </md:Transitioner>
  </Grid>
</UserControl>
